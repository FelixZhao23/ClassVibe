<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBF0"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_class_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="課程名称"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#475569"
            android:letterSpacing="0.05"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今の気分を伝えましょう"
            android:textSize="14sp"
            android:textColor="#94A3B8"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mochi_container"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:clipChildren="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toTopOf="@id/control_panel"
        app:layout_constraintVertical_bias="0.45">

        <View
            android:layout_width="100dp"
            android:layout_height="12dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/shape_shadow"
            android:layout_marginBottom="2dp"/>

        <View
            android:id="@+id/mochi_body"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="top"
            android:background="@drawable/shape_mochi_body"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mochi_face"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <View
                android:id="@+id/blush_left"
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:background="@drawable/shape_blush_soft"
                android:alpha="0.6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="52dp"
                android:layout_marginLeft="14dp" />

            <View
                android:id="@+id/blush_right"
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:background="@drawable/shape_blush_soft"
                android:alpha="0.6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="52dp"
                android:layout_marginRight="14dp" />

            <ImageView
                android:id="@+id/eye_left"
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:src="@drawable/shape_eye_normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="47dp"/>
            <ImageView
                android:id="@+id/eye_right"
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:src="@drawable/shape_eye_normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="45dp"
                android:layout_marginRight="47dp"/>

            <ImageView
                android:id="@+id/mouth"
                android:layout_width="16dp"
                android:layout_height="4dp"
                android:src="@drawable/shape_mouth_neutral"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="75dp" />

            <View
                android:id="@+id/snot_bubble"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/shape_snot_bubble"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="50dp"
                android:layout_marginRight="50dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/emote_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="?"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="#334155"
            android:layout_gravity="top|end"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="-10dp"
            android:rotation="20"
            android:visibility="invisible" />

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:elevation="8dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="-20dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="40dp"> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="リアクション"
        android:textStyle="bold"
        android:textColor="#64748B"
        android:layout_marginBottom="16dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_easy"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:text="よくわかった"
                android:textSize="16sp"
                android:textColor="#166534"
                android:lines="1"
                app:cornerRadius="20dp"
                app:backgroundTint="#DCFCE7"
                app:strokeColor="#86EFAC"
                app:strokeWidth="0dp"
                app:elevation="0dp"
                android:stateListAnimator="@null"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_hard"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:text="難しい"
                android:textSize="16sp"
                android:textColor="#991B1B"
                android:lines="1"
                app:cornerRadius="20dp"
                app:backgroundTint="#FEE2E2"
                app:strokeColor="#FCA5A5"
                app:strokeWidth="0dp"
                app:elevation="0dp"
                android:stateListAnimator="@null"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_fast"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:text="ぜんぜんわからない"
                android:textSize="14sp"
                android:textColor="#1E40AF"
                android:lines="1"
                app:cornerRadius="20dp"
                app:backgroundTint="#DBEAFE"
                app:strokeColor="#93C5FD"
                app:strokeWidth="0dp"
                app:elevation="0dp"
                android:stateListAnimator="@null"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_slow"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:text="ちょっとわからない"
                android:textSize="14sp"
                android:textColor="#4B5563"
                android:lines="1"
                app:cornerRadius="20dp"
                app:backgroundTint="#F3F4F6"
                app:strokeColor="#D1D5DB"
                app:strokeWidth="0dp"
                app:elevation="0dp"
                android:stateListAnimator="@null"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_slacking"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:text="サボり中"
                android:textSize="14sp"
                android:textColor="#312E81"
                android:lines="1"
                app:cornerRadius="20dp"
                app:backgroundTint="#E0E7FF"
                app:strokeColor="#A5B4FC"
                app:strokeWidth="0dp"
                app:elevation="0dp"
                android:stateListAnimator="@null"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_boring"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:text="面倒"
                android:textSize="14sp"
                android:textColor="#374151"
                android:lines="1"
                app:cornerRadius="20dp"
                app:backgroundTint="#E5E7EB"
                app:strokeColor="#D1D5DB"
                app:strokeWidth="0dp"
                app:elevation="0dp"
                android:stateListAnimator="@null"/>

        </GridLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
